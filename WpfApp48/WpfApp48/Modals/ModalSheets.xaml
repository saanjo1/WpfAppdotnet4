<Window x:Class="WpfApp48.Modals.ModalSheets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp48.Modals"
        mc:Ignorable="d"
        Title="Select your sheet" Height="200" Width="270"
                WindowStartupLocation="CenterScreen">

    <Grid>
        <Label Content="Select your sheet from dropdown list:" HorizontalAlignment="Left" Height="36" Margin="24,14,-4,0" VerticalAlignment="Top" Width="242"/>
        <ComboBox Loaded="cmbSheet_Loaded" Name="cmbSheet" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="42,52,0,0"/>
        <Button Content="Save" HorizontalAlignment="Left" Click="saveSheet_click" Margin="49,100,0,0" VerticalAlignment="Top" Width="74"/>
        <Button Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Click="closeModal_Click" Width="76" Margin="133,100,0,0" RenderTransformOrigin="0.447,0.9"/>
    </Grid>
</Window>
